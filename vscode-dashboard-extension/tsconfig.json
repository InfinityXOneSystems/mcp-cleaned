{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "./out",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "out",
        ".vscode-test"
    ]
}