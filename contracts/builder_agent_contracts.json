{
    "system": "Auto Builder",
    "version": "1.0.0",
    "governance": {
        "requires_validation": true,
        "dry_run_first": true,
        "audit_logging": true
    },
    "agents": [
        {
            "id": "builder.architect",
            "role": "System Planner",
            "scope": "mcp/auto_builder/",
            "responsibilities": [
                "Expand build_plan.json into detailed architecture blueprints",
                "Assign module ownership to Synthesizer and Integrator agents",
                "Record planning metadata in mcp/dev_evolution/history"
            ],
            "inputs": [
                "build_plan.json",
                "contracts/*.json"
            ],
            "outputs": [
                "architecture_blueprint.json"
            ],
            "governance_level": "HIGH"
        },
        {
            "id": "builder.synthesizer",
            "role": "Implementation Composer",
            "scope": "mcp/auto_builder/",
            "responsibilities": [
                "Translate blueprints into language-specific stubs (Python, TS)",
                "Generate only code under approved paths",
                "Embed MCP headers and contract IDs in each file"
            ],
            "inputs": [
                "architecture_blueprint.json"
            ],
            "outputs": [
                "module_specifications/*.json"
            ],
            "governance_level": "MEDIUM"
        },
        {
            "id": "builder.critic",
            "role": "Quality Auditor",
            "scope": "mcp/auto_builder/",
            "responsibilities": [
                "Score Synthesizer output against contracts",
                "Flag non-compliance or low confidence sections",
                "Emit validation_report.json"
            ],
            "inputs": [
                "module_specifications/*.json"
            ],
            "outputs": [
                "validation_report.json"
            ],
            "governance_level": "HIGH"
        },
        {
            "id": "builder.integrator",
            "role": "System Assembler",
            "scope": "mcp/auto_builder/",
            "responsibilities": [
                "Merge validated modules into cohesive system map",
                "Update mcp/index with integration metadata",
                "Notify Guardian for final approval"
            ],
            "inputs": [
                "validation_report.json"
            ],
            "outputs": [
                "integrated_blueprint.json"
            ],
            "governance_level": "HIGH"
        },
        {
            "id": "builder.guardian",
            "role": "Compliance Validator",
            "scope": "mcp/auto_builder/",
            "responsibilities": [
                "Review integrated blueprint against MCP laws",
                "Approve or reject deployment to LIVE mode",
                "Sign validator_seal in dev_evolution history"
            ],
            "inputs": [
                "integrated_blueprint.json"
            ],
            "outputs": [
                "final_approved_system.json"
            ],
            "governance_level": "CRITICAL"
        }
    ]
}