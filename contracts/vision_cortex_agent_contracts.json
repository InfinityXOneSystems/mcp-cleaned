{
    "system": "Vision Cortex",
    "version": "1.0.0",
    "governance": {
        "requires_validation": true,
        "dry_run_first": true,
        "audit_logging": true
    },
    "agents": [
        {
            "id": "vc.crawler",
            "role": "Signal Harvester",
            "scope": "mcp/vision_cortex/",
            "responsibilities": [
                "Crawl approved data sources for intelligence signals",
                "Tag and timestamp each signal",
                "Store raw feed in mcp/index/signals"
            ],
            "inputs": [
                "external_sources"
            ],
            "outputs": [
                "signals/*.json"
            ],
            "governance_level": "MEDIUM"
        },
        {
            "id": "vc.ingestor",
            "role": "Data Normalizer",
            "scope": "mcp/vision_cortex/",
            "responsibilities": [
                "Parse crawler outputs into structured documents",
                "Apply schema from contracts/ingestion_schema.json",
                "Push normalized entries to Firestore and vector store"
            ],
            "inputs": [
                "signals/*.json"
            ],
            "outputs": [
                "normalized_records/*.json"
            ],
            "governance_level": "MEDIUM"
        },
        {
            "id": "vc.organizer",
            "role": "Memory Curator",
            "scope": "mcp/vision_cortex/",
            "responsibilities": [
                "Cluster ingested data by domain and confidence",
                "Update index_system entries",
                "Notify predictor for model refresh"
            ],
            "inputs": [
                "normalized_records/*.json"
            ],
            "outputs": [
                "context_clusters/*.json"
            ],
            "governance_level": "HIGH"
        },
        {
            "id": "vc.predictor",
            "role": "Forecast Engine",
            "scope": "mcp/vision_cortex/",
            "responsibilities": [
                "Run prediction models using latest indexed data",
                "Produce confidence-scored outcomes",
                "Send results to visionary agent"
            ],
            "inputs": [
                "context_clusters/*.json"
            ],
            "outputs": [
                "predictions/*.json"
            ],
            "governance_level": "HIGH"
        },
        {
            "id": "vc.visionary",
            "role": "Pattern Synthesizer",
            "scope": "mcp/vision_cortex/",
            "responsibilities": [
                "Detect meta-patterns and emerging opportunities",
                "Compose narrative briefs for strategist agent",
                "Trigger strategist decision cycle"
            ],
            "inputs": [
                "predictions/*.json"
            ],
            "outputs": [
                "insights/*.json"
            ],
            "governance_level": "HIGH"
        },
        {
            "id": "vc.strategist",
            "role": "Decision Architect",
            "scope": "mcp/vision_cortex/",
            "responsibilities": [
                "Convert insights into prioritized actions",
                "Rank by impact × risk × confidence",
                "Submit actions to validator"
            ],
            "inputs": [
                "insights/*.json"
            ],
            "outputs": [
                "action_plans/*.json"
            ],
            "governance_level": "HIGH"
        },
        {
            "id": "vc.validator",
            "role": "Compliance Auditor",
            "scope": "mcp/vision_cortex/",
            "responsibilities": [
                "Evaluate strategist outputs for accuracy and governance fit",
                "Approve or reject with rationale",
                "Emit validation logs to dev_evolution"
            ],
            "inputs": [
                "action_plans/*.json"
            ],
            "outputs": [
                "validation_reports/*.json"
            ],
            "governance_level": "CRITICAL"
        },
        {
            "id": "vc.ceo",
            "role": "Executive Integrator",
            "scope": "mcp/vision_cortex/",
            "responsibilities": [
                "Oversee all agent interactions and confidence deltas",
                "Authorize cross-system communications with Auto Builder",
                "Maintain high-level system coherence"
            ],
            "inputs": [
                "validation_reports/*.json"
            ],
            "outputs": [
                "executive_summaries/*.json"
            ],
            "governance_level": "CRITICAL"
        },
        {
            "id": "vc.documentor",
            "role": "Narrative Generator",
            "scope": "mcp/vision_cortex/",
            "responsibilities": [
                "Translate validated decisions into human-readable reports",
                "Publish to Intelligence Cockpit UI",
                "Archive daily outputs to Firestore"
            ],
            "inputs": [
                "executive_summaries/*.json"
            ],
            "outputs": [
                "narratives/*.json"
            ],
            "governance_level": "MEDIUM"
        }
    ]
}