{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "types": [
            "node",
            "vscode"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "dist"
    ]
}