{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "outDir": "${workspaceFolder}/extension/dist",
        "rootDir": "${workspaceFolder}/extension/src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}