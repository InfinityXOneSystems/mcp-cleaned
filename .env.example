# Example environment variables for running the Omni Gateway locally
# Copy to `.env` and fill values (DO NOT commit your real credentials).

# Path to Google service account JSON for local development
GOOGLE_APPLICATION_CREDENTIALS=C:\Users\you\path\workspace-sa.json

# Firestore project id
FIRESTORE_PROJECT=infinity-x-one-systems
FIRESTORE_COLLECTION=mcp_memory

# URLs for services (Cloud Run default or custom domain)
FRONTEND_SERVICE_URL=https://frontend-service-0a277877-896380409704.us-east1.run.app
GATEWAY_URL=https://gateway-896380409704.us-east1.run.app

# Service mode (single|cluster)
SERVICE_MODE=single
# Infinity XOS MCP - Environment Variables (example)
# Copy to .env (do not commit .env) and fill with your secrets

# GitHub
GITHUB_TOKEN=
GITHUB_APP_TOKEN=

# Hostinger
HOSTINGER_API_KEY=

# Orchestrator
ORCHESTRATOR_URL=https://orchestrator-xxxxxxxxxx.run.app/execute

# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=C:\Users\YourUser\path\to\service_account.json

# VS Code (optional)
VS_CODE_PATH=C:\Program Files\Microsoft VS Code\Code.exe

# Example environment variables for local demo
GITHUB_TOKEN=ghp_example
GOOGLE_OAUTH_TOKEN=ya29.example
GOOGLE_SERVICE_ACCOUNT_JSON=credentials/service-account.json
GATEWAY_PORT=8000
DOC_EV_MODE=safe
DOC_EV_PATH_OVERRIDE=
DB_PATH=mcp_memory.db

# Optional: local secrets directory
LOCAL_SECRETS_DIR=local_secrets
