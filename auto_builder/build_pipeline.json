{
    "pipeline_id": "auto-builder-v1",
    "version": "1.0.0",
    "name": "Auto Builder Execution Chain",
    "description": "5-agent deterministic chain for MCP-governed code generation",
    "pipeline": [
        {
            "id": "builder.architect",
            "role": "System Planner",
            "next": "builder.synthesizer",
            "inputs": [
                "build_plan.json",
                "contracts/*.json"
            ],
            "outputs": [
                "architecture_blueprint.json"
            ],
            "timeout_seconds": 300,
            "retry_on_failure": true,
            "max_retries": 2
        },
        {
            "id": "builder.synthesizer",
            "role": "Implementation Composer",
            "next": "builder.critic",
            "inputs": [
                "architecture_blueprint.json"
            ],
            "outputs": [
                "module_specifications/*.json"
            ],
            "timeout_seconds": 600,
            "retry_on_failure": true,
            "max_retries": 2
        },
        {
            "id": "builder.critic",
            "role": "Quality Auditor",
            "next": "builder.integrator",
            "inputs": [
                "module_specifications/*.json"
            ],
            "outputs": [
                "validation_report.json"
            ],
            "timeout_seconds": 180,
            "retry_on_failure": false,
            "max_retries": 0
        },
        {
            "id": "builder.integrator",
            "role": "System Assembler",
            "next": "builder.guardian",
            "inputs": [
                "validation_report.json"
            ],
            "outputs": [
                "integrated_blueprint.json"
            ],
            "timeout_seconds": 300,
            "retry_on_failure": true,
            "max_retries": 1
        },
        {
            "id": "builder.guardian",
            "role": "Compliance Validator",
            "next": null,
            "inputs": [
                "integrated_blueprint.json"
            ],
            "outputs": [
                "final_approved_system.json"
            ],
            "timeout_seconds": 120,
            "retry_on_failure": false,
            "max_retries": 0
        }
    ],
    "governance": {
        "dry_run_first": true,
        "validator_required": true,
        "audit_logging": true,
        "kill_switch_enabled": true,
        "requires_human_approval_for_live": true
    },
    "execution_modes": {
        "DRY_RUN": {
            "description": "Simulate execution without writing files",
            "writes_enabled": false,
            "audit_level": "verbose"
        },
        "VALIDATED": {
            "description": "Execute with validator approval",
            "writes_enabled": true,
            "audit_level": "standard",
            "requires_validator_signature": true
        },
        "LIVE": {
            "description": "Full autonomous execution",
            "writes_enabled": true,
            "audit_level": "standard",
            "requires_human_approval": true,
            "requires_validator_signature": true
        }
    },
    "failure_handling": {
        "on_agent_failure": "halt_pipeline",
        "on_validation_failure": "reject_and_log",
        "on_timeout": "retry_or_halt",
        "notification_channels": [
            "dev_evolution/log.json",
            "cockpit_ui"
        ]
    },
    "metadata": {
        "created_at": "2025-12-26T00:00:00Z",
        "created_by": "MCP Governance",
        "contract_reference": "contracts/builder_agent_contracts.json"
    }
}