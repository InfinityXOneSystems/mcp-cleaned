{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AutoBuilder Build Plan",
    "type": "object",
    "required": [
        "plan_id",
        "requested_by",
        "intent_summary",
        "scope",
        "architecture",
        "steps",
        "constraints",
        "risk_assessment",
        "validation_requirements",
        "artifacts"
    ],
    "properties": {
        "plan_id": {
            "type": "string",
            "description": "Unique build plan identifier"
        },
        "requested_by": {
            "type": "string",
            "enum": [
                "VisionCortex"
            ]
        },
        "intent_summary": {
            "type": "string",
            "minLength": 20
        },
        "scope": {
            "type": "object",
            "required": [
                "write_paths",
                "read_paths"
            ],
            "properties": {
                "write_paths": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "read_paths": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "architecture": {
            "type": "object",
            "required": [
                "components",
                "interfaces"
            ],
            "properties": {
                "components": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "interfaces": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "steps": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "step_id",
                    "description",
                    "action",
                    "files"
                ],
                "properties": {
                    "step_id": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "action": {
                        "type": "string",
                        "enum": [
                            "create",
                            "modify",
                            "delete"
                        ]
                    },
                    "files": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "constraints": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "risk_assessment": {
            "type": "string"
        },
        "validation_requirements": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "artifacts": {
            "type": "array",
            "items": {
                "enum": [
                    "build_plan.json",
                    "execution_log.json",
                    "diff_manifest.json",
                    "validation_report.json"
                ]
            }
        }
    }
}