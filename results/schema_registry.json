{
    "version": "1.0",
    "description": "Registry of output schemas for normalized report exports",
    "schemas": {
        "report_summary": {
            "columns": [
                "repo_path",
                "report_filename",
                "timestamp",
                "source_url",
                "text_length",
                "keywords_found",
                "urgency_avg",
                "emotional_stress_avg",
                "financial_distress_avg",
                "confidence_avg",
                "deal_score_avg"
            ],
            "policy": {
                "allow_new_columns": true,
                "new_column_rules": "New columns must be registered with type and purpose. Optional columns appended right side. Core columns cannot be removed. Backfill recommended."
            }
        },
        "signal_row": {
            "columns": [
                "repo_path",
                "report_filename",
                "signal_id",
                "keyword",
                "context",
                "urgency",
                "emotional_stress",
                "financial_distress",
                "intent_borrow",
                "intent_sell",
                "confidence",
                "entities"
            ],
            "policy": {
                "allow_new_columns": true
            }
        }
    }
}