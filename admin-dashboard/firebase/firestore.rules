rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Agents collection - Role-based access
    match /agents/{agentId} {
      allow read: if request.auth != null;
      allow write: if hasRole('admin');
    }

    // Agent tasks
    match /agent_tasks/{taskId} {
      allow read: if request.auth != null;
      allow write: if hasRole('admin') || hasRole('operator');
    }

    // Properties (Real Estate Intelligence)
    match /properties/{propertyId} {
      allow read: if request.auth != null;
      allow create, update: if hasRole('admin') || hasRole('operator');
      allow delete: if hasRole('admin');
    }

    // Loan signals
    match /loan_signals/{signalId} {
      allow read: if request.auth != null;
      allow create, update: if hasRole('admin') || hasRole('operator');
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Chat messages
    match /chat/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // System state (read-only for most)
    match /system/{document=**} {
      allow read: if request.auth != null;
      allow write: if hasRole('admin');
    }

    // Predictions
    match /predictions/{predictionId} {
      allow read: if request.auth != null;
      allow write: if hasRole('admin') || hasRole('analyst');
    }

    // Market sentiment
    match /market_sentiment/{sentimentId} {
      allow read: if request.auth != null;
      allow write: if hasRole('admin') || hasRole('analyst');
    }
  }

  function hasRole(role) {
    return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
  }
}
