{
    "firestore": {
        "rules": "firebase/firestore.rules",
        "indexes": "firebase/firestore.indexes.json"
    },
    "functions": {
        "source": "firebase/functions",
        "runtime": "nodejs20"
    },
    "hosting": {
        "site": "infinity-x-admin-dashboard",
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(js|css|png|gif|jpg|jpeg|svg|webp)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=1year, immutable"
                    }
                ]
            }
        ]
    }
}